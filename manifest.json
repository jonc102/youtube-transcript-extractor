{
  "manifest_version": 3,
  "name": "Distill",
  "version": "4.1.0",
  "description": "Distill YouTube videos into transcripts, AI summaries, and conversational chat",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "constants.js",
        "utils.js",
        "theme-detector.js",
        "cache-manager.js",
        "chat-manager.js",
        "modal-ui.js",
        "transcript-orchestrator.js",
        "content.js",
        "content-injector.js"
      ],
      "css": ["modal-styles.css"],
      "run_at": "document_idle"
    }
  ]
}
